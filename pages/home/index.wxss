/* pages/home/index.wxss */

page {
  background-color: #f5f5f5;
}

.home-top {
  height: 150;
  background-image:   linear-gradient(to right,#ff9000 0,#ff5000 100%);
}

.home-search {
  font-size: 12px;
  color: #999;
  padding: 10px 20px 10px 20px;
  width: auto;
  background-color: white;
  border: 1px solid #ff5000;
  border-radius: 10px;
}

.home-middle {
  /* height: 110px; */
  display: flex;
  align-items: center;
  padding: 2vw;
}

.middle-left, .middle-right {
  height: 140px;
  width: 100%;
  margin-left: 5px;
  margin-right: 5px;
}

.middle-right-1, .middle-right-2 {
  width: 100%;
  height: 65px;
}

.middle-right-1 {
  margin-bottom: 10px;
}

.middle-left, .middle-right-1, .middle-right-2 {
  border: 1px solid #ff5000;
  box-sizing: border-box;
}

.middle-text {
  text-align: center;
  font-size: 13px;
  color: grey;
  line-height: 20px;
}

.menu {
  font-size: 15px;
  padding: 5px 10px;
  color:black;
  display: inline-block;
  background-color: white;
  line-height: 30px;
  
}

.menu-box {
  /* height: 35px; */
  width: auto;
}

.menu-active {
  color: #ff5000;
  /* text-decoration: underline; */
  border-bottom: 1px solid #ff5000;
}

.goods {
  display: flex;
  padding: 5px;
}

.goods-item {
  height: 200px;
  width: 50vw;
  padding: 5px;
  display: inline-block;
}

.goods-item image {
  height: 120px;
  width: 100%;
}

.goods-item-body {
  border-radius: 5px;
  background-color: white;
  
}

.biaoti {
  font-size: 15px;
}

.goods-item-row{
  display: flex;
  align-items: center;
  justify-content: center;
}

.goods-item-left{
  width: 50%;
  text-align: left;
}

.goods-item-right{
  width: 50%;
  text-align: right;
}

.detail {
  display: flex;
  align-items: center;
  justify-content: center;
  /* text-align: center; */
  line-height: 15px;
}

.price {
  width: 50%;
  text-align: left;
}

.nowprice {
  font-size: 13px;
  color: red;
}

.exprice {
  font-size: 10px;
  color: #999;
  text-decoration: line-through;
  
}

.sellaccount {
  font-size: 10px;
  text-align: right;
  width: 50%;
  color: #999;
}

.discount {
  display: flex;
  background-color: lightyellow;
}

.price {
  font-size: 13px;
}

.name {
  font-size: 10px;
}

.discountbuttom {
  
}

.buttom {
  font-size: 12px;
  color: #ff5000; 
  text-align: center;
  border-radius: 8px;
  background-color: yellow;
  padding: 0 12px;
  
}
.bgc{
  background-image:   linear-gradient(to right,#ff9000 0,#ff5000 100%);
  color: white;
  padding: 0 10px 5px 10px;
}