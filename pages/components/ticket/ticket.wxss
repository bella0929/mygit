/* pages/gothree/gothree.wxss */

.quan {
  height: 20vw;
  width: 48vw;
  /* border: 1px solid red; */
  display: flex;
}

.left {
  color: #fff;
  width: 33vw;
  background-color: yellow;
  height: 100%;
  /* display: flex; */
  align-items: center;
  background: linear-gradient(to right, rgba(255, 0, 0, 1), rgba(255, 0, 0, 0.6));
  justify-content: center;
}

.right {
  width: 15vw;
  background-color: rgb(56, 53, 53);
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  color: white;
  text-align: center;
  font-size: 20px;
  line-height: 30px;
  vertical-align: middle;
}

.toptext {
  text-align: center;
}

.number {
  font-size: 30px;
}

.buttomtext {
  font-size: 15px;
  text-align: center;
}

.coupon-circle {
  display: inline-block;
  width: 22px;
  height: 22px;
  background: #fff;
  border-radius: 50%;
  margin-right: -11px;
  z-index: 1;
}

.coupon-circle.top {
  top: 30px;
}

.place {
  width: 50vw;
  display: flex;
  align-items: center;
  justify-content: center;
}
