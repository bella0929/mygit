/* pages/user/my.wxss */
page {
  background-color: #f5f5f5;
}
.mytx{
  height: 70px;
  width: 70px;
  border: 3px double #ff5000;
  border-radius: 50%;
}
.my-top{
  background-image:   linear-gradient(to right,#ff9000 0,#ff5000 100%);
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 120px;
}
.button{
  background: white;
  display: inline-block;
  border: 1px solid #ff5000;
  border-radius: 18px;
  color: #ff5000;
  font-size: 13px;
  width: 80px;
  line-height: 25px;
  text-align: center;
}
.dianji{
  color: white;
  font-size: 15px;
}
.type{
  color: white;
  font-size: 10px;
}

.middle-word{
  background-color: white;
  margin: 10px 0 10px 0;
}
.item{
  border-bottom: 1px solid #f5f5f5;
  line-height: 35px;
  font-size: 13px;
  margin: 0 20px  0 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.item-left{
   width: 50%;
  text-align: left;
}
.item-right{
  width: 50%;
  text-align: right;
}
.item-image{
  width: 15px;
  height: 15px;
  
  
}

.wechat{
  height: 60px;
  background-image:   linear-gradient(to right,#ff9000 0,#ff5000 100%);
  margin:15px;  
  border-radius: 3px;
 display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}
.text1{
  font-size: 15px;
  color: white;
  line-height: 22px;
}
.text2{
  font-size: 10px;
  color: lightyellow;
}
.copybtn{
  background-color: white;
  color: #ff5000;
  border-radius: 3px;
  width: 80px;
  float: right;
  text-align: center;
}  
.copybtn-text{
  font-size: 12px;

}
.wechat-box{
  height: 100%;
  width: 100%;
  padding: 20px 20px;
  
}